<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/guide_1"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            >

            <include layout="@layout/head"/>

            <TextView
                android:id="@+id/dateChoice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/text_blue"
                android:text="日期选择" />
            <TextView
                android:id="@+id/cityChoice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/text_blue"
                android:text="城市选择" />

            <TextView
                android:id="@+id/popoChoice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/text_blue"
                android:text="提示选择框" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_enlarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/text_blue"
                    android:text="放大" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_pubuliu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/text_blue"
                android:text="瀑布流" />

            <TextView
                android:id="@+id/tv_multil_ui"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/text_blue"
                android:text="RecyclerView加刷新" />

            <TextView
                android:id="@+id/tv_show_max_img"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/text_blue"
                android:text="查看大图" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
