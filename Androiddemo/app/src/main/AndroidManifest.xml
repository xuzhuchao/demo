<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xzc.androiddemo">

    <application
        android:allowBackup="true"
        android:name=".MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--启动页-->
        <activity android:name=".ui.login.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--主界面-->
        <activity android:name=".MainActivity"
            android:launchMode="singleTask"
            >

        </activity>

        <!--欢迎页-->
        <activity android:name=".ui.login.GuideActivity">

        </activity>

        <!--日期选择-->
        <activity android:name=".ui.CalendarActivity">

        </activity>
        <!--dialog界面-->
        <activity android:name=".ui.dialog_ui.MyDialogActivity">

        </activity>
        <!--瀑布流界面-->
        <activity android:name=".ui.recyclerview.WaterfallFlowActivity">

        </activity>
        <!--多重布局-->
        <activity android:name=".ui.recyclerview.MultiLayoutActivity">

        </activity>
        <!--查看大图-->
        <activity android:name=".ui.recyclerview.ShowMaxImgActivity">

        </activity>


    </application>

</manifest>
